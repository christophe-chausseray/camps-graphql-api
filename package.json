{
  "name": "camps-graphql-api",
  "version": "1.0.0",
  "description": "GraphQL API to show campings location",
  "main": "./dist/index.ts",
  "scripts": {
    "build": "yarn build:ts && yarn lint && yarn test",
    "start": "concurrently \"yarn:watch:ts\" \"yarn:watch:server\"",
    "build:ts": "tsc",
    "watch:ts": "tsc -W",
    "watch:server": "nodemon -w dist dist/index.js",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:unit": "jest --testPathPattern=/src/__tests__/unit",
    "test:integration": "jest --testPathPattern=/src/__tests__/integration",
    "test:e2e": "jest --testPathPattern=/src/__tests__/e2e",
    "db:migrate": "knex migrate:latest",
    "db:reset": "dropdb -U postgres camps-api && createdb -U postgres camps-api && yarn --env dev db:migrate"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.4.0",
    "inversify": "^5.0.1",
    "knex": "^0.21.12",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^7.2.4",
    "@types/express": "^4.17.9",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.15",
    "@types/knex": "^0.16.1",
    "@types/node": "^14.14.7",
    "@types/response-time": "^2.3.4",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "casual": "^1.6.2",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "graphql-tools": "^7.0.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christophe-chausseray/camps-graphql-api.git"
  },
  "keywords": [
    "GraphQL",
    "NodeJS",
    "Express",
    "Apollo",
    "Postgresql"
  ],
  "author": "Christophe Chausseray",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/christophe-chausseray/camps-graphql-api/issues"
  },
  "homepage": "https://github.com/christophe-chausseray/camps-graphql-api#readme"
}
